@model BitcoinPriceCalculator.Models.PriceCalculatorModel

@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="pt">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <script src="~/js/site.js"></script>
    <title>Bitcoin - Calculadora de tempo</title>
</head>
<body>

    <!-- Hero -->
    <section id="hero" class="min-vh-100 d-flex align-items-center text-center">
        <div class="container">
            <div class="row">
                <div class="col-12 section-padding">
                    <h1 class="text-uppercase text-white fw-semibold display-1">
                        Welcome to
                        <span style="color: #f2a900">test</span>
                        <i class="fa-brands fa-bitcoin fa-sm" style="color: #f2a900;"></i>
                    </h1>

                    <h6 class="text-white mt-3 mb-4">TESTANDO O TEXTO QUE VAI ESTAR AQUI COM BOOTSTRAP</h6>

                    <div class="element">
                        <form id="bitcoinForm" method="post">
                            <div class="d-flex justify-content-center">
                                <div class="form-group w-75 mt-3">
                                    <label asp-for="PurchaseDate" class="control-label"></label>
                                    <input asp-for="PurchaseDate" class="form-control" />
                                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-warning">Calcular</button>
                        </form>

                        <!-- Btc Price Function -->
                        <div id="result"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="wave-separator">
        <img src="/img/onda_branca.svg" alt="wave" />
    </div>

    <!-- About -->
    <section id="about" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <div class="section-title mb-0">

                        <h1 class="display-4 fw-semibold">Sobre a calculadora</h1>
                        <div class="line mb-0"></div>

                        <!-- Animation -->
                        <div class="d-flex justify-content-center">
                            <script src="https://unpkg.com/@@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script>
                            <dotlottie-player src="https://lottie.host/0c901d3c-5935-44c2-9ea3-04ee744c8dea/ALCTGL2HLu.json" background="transparent" speed="1" style="width: 300px; height: 300px;" loop autoplay></dotlottie-player>
                        </div>

                        <i class="fa-brands fa-bitcoin fa-lg"></i>

                        <p>Texto de teste para a descrição sobre do site</p>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <img src="" alt="">
                </div>
            </div>
        </div>
    </section>
</body>
</html>